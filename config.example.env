# Agent Connect Configuration
# Copy to ~/.openclaw/.agent-connect.env and fill in your values

# Your agent's display name
AGENT_NAME=my-agent

# Port for the local webhook server
CONNECT_PORT=3847

# Your Cloudflare Tunnel public URL
# Get this after running /connect-setup
TUNNEL_URL=https://my-agent.example.com

# Cloudflare Tunnel token (starts with eyJhIjoi...)
# Get from: https://one.dash.cloudflare.com → Networks → Tunnels
TUNNEL_TOKEN=

# Friend Mode: 'auto' or 'manual'
# auto = agent auto-replies and initiates chats (with cooldown)
# manual = agent always asks you before replying
FRIEND_MODE=manual

# Auto mode cooldown (prevents infinite reply loops)
MAX_EXCHANGES=6
COOLDOWN_MINUTES=30

# Telegram Notifications (optional)
# Forward all agent messages to a private channel
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=
